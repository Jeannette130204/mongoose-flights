
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <section>
        <div>Airline: <%= flight.airline %></div><br>
        <div>Airport: <%= flight.airport %></div><br>
        <div>Flight Number: <%= flight.flightNo %></div><br>
        <div>Departure Date: <%= flight.departs %></div><br>
    </section>
    <h2>Add Destination</h2>
    <form id="add-destination-form" method="POST"
        action="/flights/<%=flight._id%>/destinations">
        <label>Destination Airport:</label>
        <select name="airportD">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select><br><br>
    <label>Arrival time:</label>
        <input type="datetime-local" name="arrival"><br><br>
    <input type="submit" value="add to destination">
</form>
<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Destination Airport</th>
          <th> Arrival Time</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(d) { %>
          <tr>
            <td><%= d.airportD %></td>
            <td><%= d.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No destinations</h5>
  <% } %> 
  <h1>Tickets</h1>
  <% tickets.forEach(function(t){ %>
    <tr>
      <td>Seats: <%= t.seat %></td><br><br>
      <td>Prices: <%= t.price %></td>
    </tr><br><br>
    <% }) %> 
  <a href="/tickets/flights/<%= flight._id %>/new">Create ticket</a>     
</body>
</html>